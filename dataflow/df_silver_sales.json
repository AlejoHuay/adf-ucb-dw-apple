{
	"name": "df_silver_sales",
	"properties": {
		"folder": {
			"name": "silver"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sql_sales",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sql_silver_sales",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "cleanColumns"
				},
				{
					"name": "convertSaleDate"
				},
				{
					"name": "filtrarDuplicados"
				},
				{
					"name": "filtrarNulos"
				},
				{
					"name": "selectColumns"
				},
				{
					"name": "removeCountColumn"
				}
			],
			"scriptLines": [
				"source(output(",
				"          sale_id as string,",
				"          sale_date as string,",
				"          store_id as string,",
				"          product_id as string,",
				"          quantity as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source1 derive(sale_date_clean = iif( !isNull(toDate(sale_date, 'M/d/yyyy', 'MM/dd/yyyy')), toDate(sale_date, 'M/d/yyyy', 'MM/dd/yyyy'), iif( !isNull(toDate(sale_date, 'dd/MM/yyyy')), toDate(sale_date, 'dd/MM/yyyy'), iif( !isNull(toDate(sale_date, 'dd-MM-yyyy', 'd-MM-yyyy')), toDate(sale_date, 'dd-MM-yyyy', 'd-MM-yyyy'), iif( !isNull(toDate(sale_date, 'yyyy/MM/dd')), toDate(sale_date, 'yyyy/MM/dd'), toDate(sale_date, 'yyyy-MM-dd') ) ) ) ),",
				"          sale_id_clean = trim(sale_id),",
				"          quantity_clean = iif(    isNull(quantity) || isNull(trim(quantity)) || trim(quantity) == '',    '0',     trim(quantity))) ~> cleanColumns",
				"cleanColumns cast(output(",
				"          sale_date_clean as date 'yyyy-MM-dd',",
				"          quantity_clean as integer '000'",
				"     ),",
				"     errors: true) ~> convertSaleDate",
				"selectColumns aggregate(groupBy(sale_id,",
				"          store_id,",
				"          sale_date,",
				"          product_id,",
				"          quantity),",
				"     row_cont = count()) ~> filtrarDuplicados",
				"filtrarDuplicados filter(!isNull(sale_id) && !isNull(sale_date)) ~> filtrarNulos",
				"convertSaleDate select(mapColumn(",
				"          sale_id = sale_id_clean,",
				"          sale_date = sale_date_clean,",
				"          quantity = quantity_clean,",
				"          product_id,",
				"          store_id",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColumns",
				"filtrarNulos select(mapColumn(",
				"          sale_id,",
				"          store_id,",
				"          sale_date,",
				"          product_id,",
				"          quantity",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> removeCountColumn",
				"removeCountColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          sale_id as string,",
				"          sale_date as date,",
				"          store_id as string,",
				"          product_id as string,",
				"          quantity as integer",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> sink1"
			]
		}
	}
}